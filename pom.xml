	<modelVersion>4.0.0</modelVersion>
	<groupId>nl.kennisnet</groupId>
	<artifactId>arena-server</artifactId>
	<packaging>war</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>arena-server Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<prerequisites>
		<maven>2.1.1</maven>
	</prerequisites>
	<repositories>
		<repository>
			<id>opennms-repositry</id>
			<name>Open nms repositoy</name>
			<url>http://repo.opennms.org/maven2/</url>
		</repository>
		<repository>
			<id>Hibernate Spatial repository</id>
			<url>http://www.hibernatespatial.org/repository</url>
		</repository>
		<repository>
			<id>opengeo repository</id>
			<url>http://repo.opengeo.org</url>
		</repository>
		<repository>
			<id>geotools repository</id>
			<url>http://download.osgeo.org/webdav/geotools/</url>
		</repository>
		<repository>
			<id>geo.snapshots</id>
			<name>Finalist Geo snapshots</name>
			<url>https://www.intranet.finalist.com/nexus/content/repositories/thirdparty/</url>
		</repository>
	</repositories>
	
	<properties>
		<spring.version>3.1.0.RELEASE</spring.version>
